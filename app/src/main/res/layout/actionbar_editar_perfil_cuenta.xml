<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rela_negro_action"
    android:background="@android:color/white">

    <Button
        android:stateListAnimator="@null"
        android:background="@drawable/atras_buscar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/btn_atras_seguir_usuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="3dp"
        android:layout_centerVertical="true" />



    <TextView
        android:id="@+id/txt_actionbar_moderno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@+id/btn_atras_seguir_usuario"
        android:layout_toRightOf="@+id/btn_atras_seguir_usuario"
        android:layout_toStartOf="@+id/txt_resultados_actionbar"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#575757"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_resultados_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="20dp"
        android:text="35 resultados"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="13dp"
        android:visibility="gone" />


</RelativeLayout>